<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="7dp"
        android:layout_marginLeft="7dp"
        android:background="@drawable/border_gray"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:layout_width="115dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textColor="@color/colorGrayTextDark2"
                    android:textSize="@dimen/tx_small"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txTotalPinjaman"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="500.000"
                    android:textAllCaps="true"
                    android:textColor="@color/colorGrayTextDark2"
                    android:textSize="@dimen/tx_large"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/txTanggalPengajuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6feb"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorGrayTextDark2"
                android:textSize="@dimen/tx_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txStatusLunas"
                android:layout_width="100dp"
                android:layout_height="31dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/border_button"
                android:text="Lunas"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/tx_xxsmall" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
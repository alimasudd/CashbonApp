<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvNotif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardElevation="5dp">

        <RelativeLayout
            android:id="@+id/lyBG"
            android:padding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_gray_notif"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txJudulNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pemberitahuan"
                    android:textStyle="bold"
                    android:textColor="@color/bpDark_gray"
                    android:textSize="@dimen/tx_small2" />

                <TextView
                    android:id="@+id/txIsiNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Deadline tugas Project 3 tinggal 3 hari "
                    android:textColor="@color/bpDark_gray"
                    android:textSize="@dimen/tx_small" />

                <TextView
                    android:id="@+id/txTanggalNotif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Tanggal"
                    android:textColor="@color/colorGrayText"
                    android:textSize="@dimen/tx_small" />

            </LinearLayout>


            <Button
                android:id="@+id/btShare"
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:visibility="gone"
                android:background="@drawable/border_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:textSize="@dimen/tx_xsmall"
                android:text="Share"
                android:textColor="#ffffff" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
